{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "version": "1.0.0",
  "integration": {
    "name": "Slack",
    "type": "external_api",
    "description": "Slack 채널/DM에서 컨텍스트 수집"
  },
  "config": {
    "token": {
      "env": "SLACK_BOT_TOKEN",
      "scopes": ["channels:history", "channels:read", "users:read"]
    }
  },
  "operations": {
    "fetch_messages": {
      "description": "채널/DM 메시지 가져오기",
      "api": "conversations.history",
      "params": ["channel", "limit", "oldest", "latest"]
    },
    "get_user": {
      "description": "사용자 정보 조회",
      "api": "users.info",
      "params": ["user"]
    },
    "list_channels": {
      "description": "접근 가능한 채널 목록",
      "api": "conversations.list",
      "params": ["types", "limit"]
    }
  },
  "context_extraction": {
    "source": "slack",
    "source_id_format": "{channel_id}_{message_ts}",
    "content_format": "[{user_name}] {text}"
  },
  "sync_api": {
    "endpoint": "/api/sync/slack",
    "methods": {
      "GET": {
        "description": "채널 목록 조회",
        "response": "{ channels: [{id, name}] }"
      },
      "POST": {
        "description": "채널 메시지를 Context로 동기화",
        "request": "{ channelId: string, limit?: number }",
        "response": "{ success: true }"
      }
    }
  }
}
