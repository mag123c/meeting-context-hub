{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "version": "1.1.0",
  "integration": {
    "name": "Obsidian",
    "type": "local_storage",
    "description": "로컬 Obsidian Vault에 마크다운 파일 저장"
  },
  "config": {
    "vault_path": {
      "env": "OBSIDIAN_VAULT_PATH",
      "default": "/Users/jaehojang/Documents"
    },
    "folders": {
      "meetings": "meetings/",
      "contexts": "contexts/"
    }
  },
  "file_format": {
    "meetings": {
      "naming": "YYYY-MM-DD-{slug(title)}.md",
      "frontmatter": ["tags", "date", "type", "meeting_id"],
      "sections": ["PRD Summary", "Action Items"]
    },
    "contexts": {
      "naming": "{sanitized-summary}_{short_id}.md",
      "naming_description": "summary 기반 파일명 + 충돌 방지용 short_id (UUID 앞 8자)",
      "naming_example": "회의록-요약-테스트_a1b2c3d4.md",
      "sanitization": {
        "remove_special_chars": "<>:\"/\\|?*",
        "space_to_hyphen": true,
        "max_length": 30,
        "legacy_fallback": true
      },
      "frontmatter": ["id", "tags", "type", "summary", "source", "embedding", "createdAt", "updatedAt"],
      "sections": ["Content"]
    }
  },
  "operations": {
    "write": {
      "description": "마크다운 파일 생성/덮어쓰기",
      "implementation": "storage/obsidian/context.obsidian.ts"
    },
    "read": {
      "description": "마크다운 파일 읽기",
      "implementation": "storage/obsidian/context.obsidian.ts"
    },
    "list": {
      "description": "폴더 내 파일 목록",
      "implementation": "storage/obsidian/context.obsidian.ts"
    }
  }
}
