{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "version": "1.1.0",
  "integration": {
    "name": "Obsidian",
    "type": "local_storage",
    "description": "Store markdown files in local Obsidian Vault"
  },
  "config": {
    "vault_path": {
      "env": "OBSIDIAN_VAULT_PATH",
      "stored": "~/.config/mch/config.json",
      "default": "~/Documents/mch",
      "priority": "env > stored > default"
    },
    "folders": {
      "meetings": "meetings/",
      "contexts": "contexts/",
      "recordings": "recordings/"
    }
  },
  "file_format": {
    "meetings": {
      "naming": "YYYY-MM-DD-{slug(title)}.md",
      "frontmatter": ["tags", "date", "type", "meeting_id"],
      "sections": ["PRD Summary", "Action Items"]
    },
    "contexts": {
      "naming": "{sanitized-summary}_{short_id}.md",
      "naming_description": "Summary-based filename + collision-preventing short_id (first 8 chars of UUID)",
      "naming_example": "meeting-summary-test_a1b2c3d4.md",
      "sanitization": {
        "remove_special_chars": "<>:\"/\\|?*",
        "space_to_hyphen": true,
        "max_length": 30,
        "legacy_fallback": true
      },
      "frontmatter": ["id", "tags", "type", "summary", "source", "embedding", "createdAt", "updatedAt"],
      "sections": ["Content"]
    }
  },
  "operations": {
    "write": {
      "description": "Create/overwrite markdown file",
      "implementation": "storage/obsidian/context.obsidian.ts"
    },
    "read": {
      "description": "Read markdown file",
      "implementation": "storage/obsidian/context.obsidian.ts"
    },
    "list": {
      "description": "List files in folder",
      "implementation": "storage/obsidian/context.obsidian.ts"
    }
  }
}
