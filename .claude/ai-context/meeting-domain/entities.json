{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "version": "1.0.0",
  "entities": {
    "Meeting": {
      "description": "회의록 엔티티",
      "fields": {
        "id": "UUID",
        "user_id": "UUID (auth.users 참조)",
        "title": "회의 제목",
        "raw_content": "원본 회의록 텍스트",
        "prd_summary": "PRD 형식 요약 (problem, goal, scope, requirements)",
        "action_items": "액션 아이템 배열 (assignee, task, deadline)",
        "obsidian_path": "옵시디언 저장 경로",
        "created_at": "생성 시간"
      },
      "relations": {
        "tags": "many-to-many via meeting_tags"
      }
    },
    "Context": {
      "description": "컨텍스트 정보 엔티티",
      "fields": {
        "id": "UUID",
        "user_id": "UUID (auth.users 참조)",
        "source": "출처 (slack, notion, manual, meeting)",
        "source_id": "원본 ID (슬랙 메시지 ID 등)",
        "content": "컨텍스트 내용",
        "obsidian_path": "옵시디언 저장 경로",
        "created_at": "생성 시간"
      },
      "relations": {
        "tags": "many-to-many via context_tags"
      }
    },
    "Tag": {
      "description": "태그 엔티티",
      "fields": {
        "id": "UUID",
        "name": "태그명 (unique)",
        "description": "태그 설명",
        "created_at": "생성 시간"
      },
      "usage": "회의록과 컨텍스트에 공유 적용"
    }
  }
}
