{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "version": "2.0.0",
  "terms": {
    "Squad": {
      "description": "스쿼드. 팀 또는 조직 단위. 여러 프로젝트를 포함할 수 있음",
      "examples": ["백엔드팀", "프론트엔드팀", "데이터팀"]
    },
    "Project": {
      "description": "프로젝트. 스쿼드 내 작업 단위. 여러 스프린트로 구성",
      "statuses": ["ideation", "active", "paused", "completed", "archived"]
    },
    "Sprint": {
      "description": "스프린트. 2주 단위 작업 주기. 회의록, 컨텍스트, 액션아이템 그룹핑",
      "statuses": ["planning", "active", "completed", "cancelled"],
      "fields": {
        "goal": "스프린트 목표",
        "retrospective": "회고 내용"
      }
    },
    "PRD": {
      "full": "Product Requirements Document",
      "description": "제품 요구사항 문서. problem, goal, scope, requirements 4가지 섹션",
      "format": {
        "problem": "해결하려는 문제",
        "goal": "달성하려는 목표",
        "scope": "범위 및 포함/제외 항목",
        "requirements": "구체적 요구사항 목록"
      }
    },
    "Action Items": {
      "description": "회의에서 도출된 실행 항목. 독립 엔티티로 관리 가능",
      "embedded_format": { "assignee": "담당자", "task": "할 일", "deadline": "기한" },
      "entity_format": {
        "assignee_name": "담당자",
        "task": "할 일",
        "status": "상태 (pending, in_progress, completed, cancelled)",
        "priority": "우선순위 (low, medium, high, urgent)"
      }
    },
    "Meeting Type": {
      "description": "회의 유형",
      "values": ["standup", "planning", "retrospective", "review", "brainstorm", "decision", "other"]
    },
    "Context Type": {
      "description": "컨텍스트 유형",
      "values": ["decision", "reference", "discussion", "blocker", "update", "idea", "other"]
    },
    "Context": {
      "description": "프로젝트 관련 정보 조각. 슬랙 대화, 노션 문서, 수동 입력 등",
      "sources": ["slack", "notion", "manual", "meeting"]
    },
    "Tag": {
      "description": "컨텍스트와 회의록을 그룹핑하는 키워드",
      "types": ["category", "status", "priority", "custom"],
      "scopes": ["global", "squad", "project"]
    },
    "Obsidian Vault": {
      "description": "옵시디언 저장소. 마크다운 파일 기반 지식 관리 시스템",
      "path": "OBSIDIAN_VAULT_PATH 환경변수로 설정"
    },
    "Sync API": {
      "description": "외부 서비스 데이터를 Context로 동기화하는 API",
      "endpoints": ["/api/sync/slack", "/api/sync/notion"]
    },
    "Pagination": {
      "description": "목록 조회 시 페이지네이션 파라미터",
      "format": { "page": "페이지 번호", "limit": "페이지당 항목 수" }
    }
  }
}
