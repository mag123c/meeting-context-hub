{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "version": "2.0.0",
  "terms": {
    "Squad": {
      "description": "Team or organizational unit. Can contain multiple projects",
      "examples": ["Backend Team", "Frontend Team", "Data Team"]
    },
    "Project": {
      "description": "Work unit within a squad. Consists of multiple sprints",
      "statuses": ["ideation", "active", "paused", "completed", "archived"]
    },
    "Sprint": {
      "description": "2-week work cycle. Groups meeting notes, contexts, and action items",
      "statuses": ["planning", "active", "completed", "cancelled"],
      "fields": {
        "goal": "Sprint goal",
        "retrospective": "Retrospective notes"
      }
    },
    "PRD": {
      "full": "Product Requirements Document",
      "description": "Product requirements document with 4 sections: problem, goal, scope, requirements",
      "format": {
        "problem": "Problem to solve",
        "goal": "Goal to achieve",
        "scope": "Scope and inclusions/exclusions",
        "requirements": "Specific requirements list"
      }
    },
    "Action Items": {
      "description": "Actionable items derived from meetings. Can be managed as independent entities",
      "embedded_format": { "assignee": "Assignee", "task": "Task", "deadline": "Deadline" },
      "entity_format": {
        "assignee_name": "Assignee",
        "task": "Task",
        "status": "Status (pending, in_progress, completed, cancelled)",
        "priority": "Priority (low, medium, high, urgent)"
      }
    },
    "Meeting Type": {
      "description": "Type of meeting",
      "values": ["standup", "planning", "retrospective", "review", "brainstorm", "decision", "other"]
    },
    "Context Type": {
      "description": "Type of context",
      "values": ["decision", "reference", "discussion", "blocker", "update", "idea", "other"]
    },
    "Context": {
      "description": "Information pieces related to projects. From Slack conversations, Notion docs, manual input, etc.",
      "sources": ["slack", "notion", "manual", "meeting"]
    },
    "Tag": {
      "description": "Keywords for grouping contexts and meeting notes",
      "types": ["category", "status", "priority", "custom"],
      "scopes": ["global", "squad", "project"]
    },
    "Obsidian Vault": {
      "description": "Obsidian storage. Markdown file-based knowledge management system",
      "path": "Set via OBSIDIAN_VAULT_PATH environment variable"
    },
    "Sync API": {
      "description": "API for syncing external service data to Context",
      "endpoints": ["/api/sync/slack", "/api/sync/notion"]
    },
    "Pagination": {
      "description": "Pagination parameters for list queries",
      "format": { "page": "Page number", "limit": "Items per page" }
    }
  }
}
