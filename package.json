{
  "name": "meeting-context-hub",
  "version": "2.20.0",
  "description": "TUI tool for managing meeting contexts with AI extraction and chaining",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mch": "dist/index.js"
  },
  "files": [
    "dist",
    "package.json"
  ],
  "keywords": [
    "meeting",
    "context",
    "ai",
    "claude",
    "openai",
    "tui",
    "productivity",
    "sqlite"
  ],
  "author": "mag123c (https://github.com/mag123c)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mag123c/meeting-context-hub.git"
  },
  "bugs": {
    "url": "https://github.com/mag123c/meeting-context-hub/issues"
  },
  "homepage": "https://github.com/mag123c/meeting-context-hub#readme",
  "scripts": {
    "dev": "tsx src/index.tsx",
    "build": "tsc -p tsconfig.build.json && chmod +x dist/index.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "verify:core": "! grep -r \"from 'ink'\\|from 'react'\\|from \\\"ink\\\"\\|from \\\"react\\\"\" src/core/ --include='*.ts' --include='*.tsx' || echo 'Core is clean'"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.72.1",
    "better-sqlite3": "^12.6.2",
    "dotenv": "^17.2.3",
    "ink": "^6.6.0",
    "ink-select-input": "^6.2.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "node-record-lpcm16": "^1.0.1",
    "openai": "^6.16.0",
    "react": "^19.2.3",
    "update-notifier": "^7.3.1",
    "uuid": "^13.0.0",
    "whisper-node": "^1.1.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@testing-library/react": "^16.3.2",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^25.0.9",
    "@types/react": "^19.2.8",
    "@types/update-notifier": "^6.0.8",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.28.0",
    "globals": "^17.0.0",
    "ink-testing-library": "^4.0.0",
    "jsdom": "^27.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild"
    ]
  }
}
